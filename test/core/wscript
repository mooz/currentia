# -*- python -*-

subdirs = ""

def options(opt):
    opt.recurse(subdirs)

def configure(conf):
    conf.recurse(subdirs)

def build(bld):
    def do_test(name):
        bld.program(
            features = 'testt',
            source   = name + '.cpp',
            includes = '../../src',
            target   = name,
            uselib   = 'GTEST_MAIN'
        )
    do_test("test_tuple")
    do_test("test_object")
    do_test("test_operation")
    bld.recurse(subdirs)
