# -*- python -*-

subdirs = ""

def options(opt):
    opt.recurse(subdirs)

def configure(conf):
    conf.recurse(subdirs)

def build(bld):
    bld.program(
        features = "cxx test",
        source   = "test_lexer.cpp",
        target   = "test_lexer",
        includes = ". ../../../",
        uselib   = "gtest_main"           # link gtest_main
    )
    bld.recurse(subdirs)
